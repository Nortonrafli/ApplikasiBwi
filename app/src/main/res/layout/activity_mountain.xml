<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu2"
    android:orientation="vertical"
    tools:context=".Activity.MountainActivity">

    <ImageButton
        android:id="@+id/imageIjen"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="btn_handler_ijen"
        app:srcCompat="@drawable/ijen" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Ijen Mountain"
        android:gravity="center"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/imageRaung"
        android:layout_width="382dp"
        android:layout_height="162dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="btn_handler_raung"
        app:srcCompat="@drawable/raung" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Raung Mountain"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/imageRanti"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="btn_handler_ranti"
        app:srcCompat="@drawable/ranti"

        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Ranti Mountain"
        android:gravity="center"
        android:textSize="20dp" />

</LinearLayout>